{
	"compilerOptions": {
		"allowJs": true,
		"experimentalDecorators": true,
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}